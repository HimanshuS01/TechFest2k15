<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Fragment">
        <item name="android:background">#334</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingText" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryText" parent="Text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SummaryTitle" parent="HeadingText">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <!-- Layout styles -->
    <style name="SummaryImage">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#BBBBBB</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
